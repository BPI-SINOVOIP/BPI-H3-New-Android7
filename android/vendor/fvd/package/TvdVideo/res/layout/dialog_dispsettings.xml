<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	      xmlns:fsms="http://schemas.android.com/apk/res/com.softwinner.TvdVideo"
    android:id="@+id/dialog_dispsettings"
    android:layout_width="700dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >



        <LinearLayout
		android:id="@+id/display_effect_layout"
		android:background="#3f666666"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center_horizontal">

                <TextView android:id="@+id/video_effect"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"
                        android:textSize="20dip"
                        android:textColor="#ffffffff"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:text="@string/display_enhance"/>

        	<LinearLayout
			android:id="@+id/table_switch"
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"
			android:layout_weight="3"
			android:gravity="center">

                <ImageButton android:id="@+id/switch_prev0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/MenuButton.prev"/>
                <TextView android:id="@+id/result0"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:textSize="20dip"
                        android:textColor="#ffffffff"
                        android:layout_weight="7"
                        android:text="@string/demo"/>
                <ImageButton android:id="@+id/switch_next0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                         style="@style/MenuButton.next"/>

		</LinearLayout>
		
	</LinearLayout>


        <LinearLayout
		android:id="@+id/video_effect_layout"
		android:background="#3f666666"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center_horizontal">

                <TextView android:id="@+id/video_effect"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"
                        android:textSize="20dip"
                        android:textColor="#ffffffff"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:text="@string/video_effect"/>

        	<LinearLayout
			android:id="@+id/table_switch"
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"
			android:layout_weight="3"
			android:gravity="center">

                <ImageButton android:id="@+id/switch_prev1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/MenuButton.prev"/>
                <TextView android:id="@+id/result1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:textSize="20dip"
                        android:textColor="#ffffffff"
                        android:layout_weight="7"/>
                <ImageButton android:id="@+id/switch_next1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                         style="@style/MenuButton.next"/>

		</LinearLayout>
		
	</LinearLayout>

        
	<LinearLayout
		android:id="@+id/brightness_layout"
                android:background="#3f666666"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="5dip"
		android:paddingBottom="5dip"
		android:gravity="center_horizontal">
	
		<TextView android:id="@+id/brightness"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:paddingLeft="20dip"
			android:paddingRight="20dip"
			android:textSize="20dip"
			android:textColor="#ffffffff"
			android:layout_weight="1"
			android:gravity="center_vertical|left"
			android:text="@string/brightness"/>
                <SeekBar
                        android:id="@+id/brightness_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                       	android:layout_height="wrap_content"
                       	android:layout_weight="4"
                        android:layout_gravity="center_vertical"
                       	android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"/>
	</LinearLayout>

        <LinearLayout
		android:id="@+id/contrast_layout"
                android:background="#3f666666"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center_horizontal">

                <TextView android:id="@+id/contrast"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"
			android:textSize="20dip"
			android:textColor="#ffffffff"
			android:layout_weight="1"
			android:gravity="center_vertical|left"
                        android:text="@string/contrast"/>
                <SeekBar
                        android:id="@+id/contrast_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/saturation_layout"
                android:background="#3f666666"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center_horizontal">

                <TextView android:id="@+id/saturation"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
			android:layout_weight="1"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"
			android:textSize="20dip"
			android:textColor="#ffffffff"
			android:gravity="center_vertical|left"
                        android:text="@string/saturation"/>
                <SeekBar
                        android:id="@+id/saturation_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/de_noise_layout"
                android:background="#3f666666"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center_horizontal">

                <TextView android:id="@+id/de_noise"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
			android:layout_weight="1"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"
			android:textSize="20dip"
			android:textColor="#ffffffff"
			android:gravity="center_vertical|left"
                        android:text="@string/de_noise"/>
                <SeekBar
                        android:id="@+id/de_noise_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/detail_enhance_layout"
                android:background="#3f666666"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center_horizontal">

                <TextView android:id="@+id/detail_enhance"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
			android:layout_weight="1"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"
			android:textSize="20dip"
			android:textColor="#ffffffff"
			android:gravity="center_vertical|left"
                        android:text="@string/detail_enhance"/>
                <SeekBar
                        android:id="@+id/detail_enhance_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/edge_sharpening_layout"
                android:background="#3f666666"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center_horizontal">

                <TextView android:id="@+id/edge_sharpening"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
			android:layout_weight="1"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"
			android:textSize="20dip"
			android:textColor="#ffffffff"
			android:gravity="center_vertical|left"
                        android:text="@string/edge_sharpening"/>
                <SeekBar
                        android:id="@+id/edge_sharpening_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"/>

        </LinearLayout>

	
</LinearLayout>
