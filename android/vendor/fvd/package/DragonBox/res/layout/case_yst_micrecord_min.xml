<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MainPerCaseTheme"
    android:orientation="horizontal" >

    <include layout="@layout/item_num_text" />

    <include layout="@layout/item_action_button" />

    <TableLayout style="@style/MainPerCaseTabLayout" >

        <TableRow style="@style/MainPerCaseTabRow" >

            <TextView
                android:id="@+id/case_micrecord_left_status"
                style="@style/MainPerCaseDetailTextView"
                android:text="@string/case_micrecord_left_status" />

            <TextView
                android:id="@+id/case_micrecord_right_status"
                style="@style/MainPerCaseDetailTextView"
                android:text="@string/case_micrecord_right_status" />
            
            <TextView
                android:id="@+id/case_micrecord_both_status"
                style="@style/MainPerCaseDetailTextView"
                android:text="@string/case_micrecord_both_status" />
        </TableRow>
    </TableLayout>

    <include layout="@layout/item_result_text" />

</LinearLayout>