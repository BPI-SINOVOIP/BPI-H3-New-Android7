<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10dip" >

        <TextView
            style="@style/CaseVersionMax"
            android:text="@string/case_version_info_type_conf" />

        <TextView
            android:id="@+id/case_version_fireware"
            style="@style/CaseVersionMax"
            android:text="@string/case_version_info_fireware" />

        <TextView
            android:id="@+id/case_version_ddr"
            style="@style/CaseVersionMax"
            android:text="@string/case_version_other_info_ddr" />

        <TextView
            android:id="@+id/case_version_cpu_freq"
            style="@style/CaseVersionMax"
            android:text="@string/case_version_other_info_nand" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dip" >

        <TextView
            style="@style/CaseVersionMax"
            android:text="@string/case_version_info_type_system" />

        <TextView
            android:id="@+id/case_version_fireware_sys"
            style="@style/CaseVersionMax"
            android:text="@string/case_version_info_fireware" />

        <TextView
            android:id="@+id/case_version_ddr_sys"
            style="@style/CaseVersionMax"
            android:text="@string/case_version_other_info_ddr" />

        <TextView
            android:id="@+id/case_version_cpu_freq_sys"
            style="@style/CaseVersionMax"
            android:text="@string/case_version_other_info_nand" />
    </LinearLayout>

</LinearLayout>