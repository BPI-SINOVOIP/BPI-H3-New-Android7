<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MainPerCaseTheme"
    android:orientation="horizontal" >

    <include layout="@layout/item_num_text" />

    <include layout="@layout/item_action_button" />

    <TableLayout style="@style/MainPerCaseTabLayout" >

        <TableRow style="@style/MainPerCaseTabRow" >

            <TextView
                android:id="@+id/case_hdmi_status_text"
                style="@style/MainPerCaseDetailTextView"
                android:text="@string/case_hdmi_status_text" />

            <TextView
                android:id="@+id/case_hdmi_sound_status_text"
                style="@style/MainPerCaseDetailTextView"
                android:text="@string/case_hdmi_sound_status_text" />
        </TableRow>
    </TableLayout>

    <include layout="@layout/item_result_text" />

</LinearLayout>