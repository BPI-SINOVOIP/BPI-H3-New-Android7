<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/write"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="@dimen/video_with"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/case_video_name"
            android:layout_width="@dimen/video_with"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:text="@string/case_video_name"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!--
             <SurfaceView
            android:id="@+id/case_view_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/case_video_name" />
        -->

        <VideoView
            android:id="@+id/case_video_videoview"
            android:layout_width="@dimen/video_with"
            android:layout_height="wrap_content"
            android:layout_below="@+id/case_video_name" />

        <ProgressBar
            android:id="@+id/case_video_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/video_with"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>
