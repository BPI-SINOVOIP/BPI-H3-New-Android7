<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/applistitemheight"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/bluetoothitemtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/listitem_padding"
            android:textColor="@drawable/white"
            android:textSize="@dimen/setting_textsize_xmedium" />

        <TextView
            android:id="@+id/smalltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/listitem_padding"
            android:gravity="center_vertical"
            android:textColor="@drawable/white"
            android:textSize="@dimen/setting_textsize_min" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/listitem_padding"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bluetoothicon"
            android:layout_width="@dimen/bluetooth_icon_size"
            android:layout_height="@dimen/bluetooth_icon_size"
            android:layout_gravity="center_vertical" />

        <View
            android:layout_width="@dimen/bluetooth_line_width"
            android:layout_height="@dimen/bluetooth_line_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bluetooth_horizontal_margin"
            android:background="@drawable/white_transparent" />

        <ImageView
            android:id="@+id/netitemicon"
            android:layout_width="@dimen/net_item_next_icon_size"
            android:layout_height="@dimen/net_item_next_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bluetooth_horizontal_margin"
            android:src="@drawable/right_icon_btn" />
    </LinearLayout>

</LinearLayout>