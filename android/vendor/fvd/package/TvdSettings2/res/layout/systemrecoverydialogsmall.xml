<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fsms="http://schemas.android.com/apk/res/com.softwinner.tvdsetting"
    android:layout_width="@dimen/appdialog_width_small"
    android:layout_height="@dimen/appdialog_height_small"
    android:background="@drawable/bg_pop_up_box_small"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@drawable/app_dialog_title_bg" >
                
	            <TextView
	                android:id="@+id/appdialog_text1"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="@dimen/wifidialog_horizontal_margin"
	                android:layout_marginRight="@dimen/wifidialog_horizontal_margin"
	                android:gravity="center_vertical"
					android:textColor="@android:color/black"
	                android:textSize="@dimen/setting_textsize_xmedium" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_Height"
                    android:layout_gravity="center"
                    android:background="@drawable/dialog_line" />
            </LinearLayout>
            
			<View
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="0.2" />

            <TextView
                android:id="@+id/appdialog_text2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/wifidialog_horizontal_margin"
                android:layout_marginRight="@dimen/wifidialog_horizontal_margin"
                android:layout_weight="2"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:textSize="@dimen/setting_textsize_xmedium" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/appdialog_button_width"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1" >

        <com.softwinner.tvdsetting.widget.ExtImageButton
            android:id="@+id/no"
            android:layout_width="0dp"
            android:layout_height="@dimen/appdialog_button_height_small"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:background="@drawable/ic_appdetail_dialog_small"
            fsms:text="@string/cancel"
            fsms:textColor="@drawable/black"
            fsms:textSize="@dimen/setting_textsize_xmedium" />

        <com.softwinner.tvdsetting.widget.ExtImageButton
            android:id="@+id/yes"
            android:layout_width="0dp"
            android:layout_height="@dimen/appdialog_button_height_small"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="left"
            android:background="@drawable/ic_appdetail_dialog_small"
            fsms:text="@string/yes"
            fsms:textColor="@drawable/black"
            fsms:textSize="@dimen/setting_textsize_xmedium" />
    </LinearLayout>

</LinearLayout>