<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/btn_back_width"
        android:layout_height="@dimen/btn_back_height"
        android:layout_marginLeft="@dimen/title_marginleft"
        android:layout_marginTop="@dimen/title_margintop"
		android:text="@string/wireless"
		android:gravity="center_vertical"
		android:paddingLeft="@dimen/setting_paddingleft"
		android:textSize="@dimen/setting_textsize_large"
		android:textColor="@drawable/white"
        android:background="@drawable/ic_title_bg" />
    
    <LinearLayout
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_margintop"
        android:visibility="gone"
        android:orientation="vertical" >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/connect_wifi"
            android:gravity="center"
            android:textColor="@drawable/white"
            android:textSize="@dimen/setting_textsize_xlarge" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_and_connect"
            android:gravity="center"
            android:textColor="@drawable/white"
            android:textSize="@dimen/setting_textsize_small" />
        
    </LinearLayout>
        
    <ListView
        android:id="@+id/wifilist"
        android:layout_width="@dimen/applistwidth"
        android:layout_height="@dimen/applistheight"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/applist_layout_margintop"
        android:divider="@drawable/divider_line"
        android:dividerHeight="@dimen/divider_Height"
        android:listSelector="@drawable/list_btn_press"
        android:scrollbarStyle="insideInset" >
    </ListView>

</LinearLayout>