<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/btn_back_width"
        android:layout_height="@dimen/btn_back_height"
        android:layout_marginLeft="@dimen/title_marginleft"
        android:layout_marginTop="@dimen/title_margintop"
		android:text="@string/setting_scale"
		android:gravity="center_vertical"
		android:paddingLeft="@dimen/setting_paddingleft"
		android:textSize="@dimen/setting_textsize_large"
		android:textColor="@drawable/white"
        android:background="@drawable/ic_title_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/displayscale_percent_margin_top"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/disp_precents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/white"
            android:textSize="@dimen/setting_textsize_xxlarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/displayscale_percent_margin_left"
            android:layout_gravity="center"
            android:textColor="@drawable/white"
            android:textSize="@dimen/setting_textsize_xsmall"
            android:text="@string/display_percent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/displayscale_seekbar_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/displayscale_seekbar_margin_top"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >
        <SeekBar
            android:id="@+id/progressBar1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/displayscale_seekbar_height"
            android:layout_gravity="center_vertical"
            android:progressDrawable="@drawable/seekres"
            android:thumb="@drawable/silver"
            android:thumbOffset="0dp"     
        />
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/displayscale_message1_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/display_setting1"
        android:textSize="@dimen/setting_textsize_small" />

    <TextView
        android:layout_marginTop="@dimen/displayscale_message2_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/display_setting2"
        android:textSize="@dimen/setting_textsize_small" />

    <View
        android:layout_marginTop="@dimen/displayscale_longdivider_margin_top"
        android:layout_width="@dimen/displayscale_longdivider_width"
        android:layout_height="@dimen/displayscale_longdivider_height"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/displayscale_select_margin_top"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/use_display_setting"
                android:textSize="@dimen/setting_textsize_xsmall" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical" >

            <Button
                android:id="@+id/scale_confirm"
                android:layout_width="@dimen/displayscale_button_width"
                android:layout_height="@dimen/displayscale_button_height"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_selector"
                android:text="@string/yes"
                android:textColor="@drawable/white"
                android:textSize="@dimen/setting_textsize_xsmall" />
            
        </LinearLayout>
<!--
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <View
                android:layout_width="@dimen/displayscale_smalldivider_width"
                android:layout_height="@dimen/displayscale_smalldivider_height"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white" />
        </LinearLayout>
--><!-- add buttons, no need space anymore -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical" >

            <Button
                android:id="@+id/scale_cancel"
                android:layout_width="@dimen/displayscale_button_width"
                android:layout_height="@dimen/displayscale_button_height"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_selector"
                android:text="@string/cancel"
                android:textColor="@drawable/white"
                android:textSize="@dimen/setting_textsize_xsmall" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/cancel_display_setting"
                android:textSize="@dimen/setting_textsize_xsmall" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>