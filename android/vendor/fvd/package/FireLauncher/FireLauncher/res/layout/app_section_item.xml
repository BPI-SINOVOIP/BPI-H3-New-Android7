<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/square_side"
    android:layout_height="@dimen/square_side"
    android:orientation="vertical" 
    android:gravity="center" >

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/app_section_icon_size"
        android:layout_height="@dimen/app_section_icon_size"
        android:gravity="center"
        android:layout_marginTop="@dimen/app_gridview_icon_margin_top"
       	android:scaleType="fitXY" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/app_gridview_text_margin_top"
        android:layout_marginBottom="@dimen/app_gridview_text_margin_bottom"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sw_textsize_xmedium" />

</LinearLayout>