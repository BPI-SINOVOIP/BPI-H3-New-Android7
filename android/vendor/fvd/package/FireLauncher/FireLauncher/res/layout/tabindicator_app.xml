<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabindicator_app"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/tabindicator_height"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/tabindicator_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tabindicator_name"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="@dimen/tabindicator_text_size_normal"
        android:textColor="@color/tabindicator_name_color" />

</RelativeLayout>