<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/other_info"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:gravity="right"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/imageSD"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_weight="1"
        android:src="@drawable/sd_connect_normal"
        android:visibility="gone" />
    
    <Space
        android:layout_width="@dimen/space_width"
        android:layout_height="@dimen/space_height" />

    <ImageView
        android:id="@+id/imageUSB"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_weight="1"
        android:src="@drawable/usb_connect_normal"
        android:visibility="gone" />

    <Space
        android:layout_width="@dimen/space_width"
        android:layout_height="@dimen/space_height" />

    <ImageView
        android:id="@+id/BluetoothStatus"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_weight="1"
        android:background="@drawable/bluetooth_connected"
        android:visibility="gone" />

    <Space
        android:layout_width="@dimen/space_width"
        android:layout_height="@dimen/space_height" />

    <!-- <com.softwinner.firelauncher.otherwidgets.WifiStatus -->

    <ImageView
        android:id="@+id/WifiStatus"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_weight="1"
        android:src="@drawable/icon_wifi_no" />

    <Space
        android:layout_width="@dimen/space_width"
        android:layout_height="@dimen/space_height" />

    <Space
        android:layout_width="@dimen/space_width"
        android:layout_height="@dimen/space_height" />
    
    <TextView 
        android:id="@+id/top_timeclock" 
        android:layout_width="@dimen/digitalClock_width"
        android:layout_height="@dimen/widgets_height"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="@dimen/digitalClock_textSize" />

    <TextView
        android:id="@+id/top_weather_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/others_textSize" />

    <Space
        android:layout_width="@dimen/space_width"
        android:layout_height="@dimen/space_height" />

    <Space
        android:layout_width="@dimen/space_width"
        android:layout_height="@dimen/space_height" />

    <ImageView
        android:id="@+id/top_weather_icon_1"
        android:layout_width="@dimen/weacher_image_width"
        android:layout_height="@dimen/widgets_height"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/top_weather_icon_2"
        android:layout_width="@dimen/weacher_image_width"
        android:layout_height="@dimen/widgets_height"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <Space
        android:layout_width="@dimen/space_width"
        android:layout_height="@dimen/space_height" />

    <Space
        android:layout_width="@dimen/space_width"
        android:layout_height="@dimen/space_height" />

    <TextView
        android:id="@+id/top_weather_info"
        android:layout_width="@dimen/weacher_info_width"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/others_textSize" />

</LinearLayout>