<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:layout_marginTop="@dimen/all_margin_top"
    android:paddingLeft="@dimen/all_margin_left">
     
    <ImageView 
        android:id="@+id/logo"
        android:layout_height="@dimen/logo_height"
        android:layout_width="@dimen/logo_width"  
        android:layout_alignParentLeft="true"
    	android:layout_alignParentTop="true" 
    	android:layout_marginLeft="@dimen/indicator_margin_medium"
        android:layout_marginTop="@dimen/indicator_margin_small"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_logo" />
      
    <include
        layout="@layout/other_infomation" 
        android:layout_height="@dimen/other_infomation_height"
        android:layout_width="@dimen/other_infomation_width"  
        android:layout_alignParentRight="true"
    	android:layout_alignParentTop="true"  
        android:layout_marginRight="@dimen/indicator_margin_small" />        
    
    <include
        layout="@layout/main_no_game_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/indicator_margin_large" />
	
</RelativeLayout>
